@model IEnumerable<Jopoffers.Models.Jop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="offset-md-2 col-md-8 ">
    <section class="category-all" dir="rtl">
        <h2 class="text-right">انواع الوظائف</h2>

        <p>
            @Html.ActionLink("انشاء وظيفة", "Create",null, new {@class="btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayNameFor(model => model.content).ToString()))
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.image)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                       
                        @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.content).ToString()))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.image)
                    </td>
                    <td>
                        @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" }) |
                        @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>
    </section>
</div>
