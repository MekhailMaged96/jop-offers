@model Jopoffers.Models.Jop

@{
    ViewBag.Title = "تفاصيل الوظيفة";

    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="offset-md-2 col-md-8">
    <section class="edit-catagory text-right" dir="rtl">
        <div>
            <h2>تفاصيل الوظيفة</h2>
            <div>
        
                <hr />
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(modelitem => modelitem.Category.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(modelitem => modelitem.Category.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.content)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.content)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.image)
                    </dt>

                    <dd>
                        @{

                            if (string.IsNullOrEmpty(Model.image))
                            {
                                <img src="~/Uploads/@Html.DisplayFor(model =>model.image)" class="img-thumbnail img-responsive" width="300px;" height="300px;" />

                            }
                            else
                            {
                                <p>لا يوجد صورة</p>
                            }

                        }
                      
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("تعديل", "Edit", new { id = Model.Id },new {@class="btn btn-primary" }) |
                @Html.ActionLink("العودة الى القائمة", "Index")
            </p>
        </div>
    </section>
</div>
