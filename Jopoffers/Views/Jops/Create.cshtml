@model Jopoffers.Models.Jop
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@*

    <script src="https://cdn.ckeditor.com/4.11.2/standard/ckeditor.js"></script>
*@
<script src="~/scripts/ckeditor/ckeditor.js"></script>
<div class="offset-md-2 col-md-8">
    <section class="edit-catagory text-right" dir="rtl">
        <h2>انشاء</h2>

        @using (Html.BeginForm("Create","Jops",FormMethod.Post,new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
            
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.content, new { htmlAttributes = new { @class = "form-control", @id="jopcont", @name="jopcontent"} })
                        @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                      
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                     
                        <input type="file" name="img"  />
                        @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, "CategoryId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="offset-md-2 col-md-10">
                        <input type="submit" value="انشاء" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <textarea name="editor1"></textarea>
           
        }

        <div>
            @Html.ActionLink("العودة الى القائمة", "Index")
        </div>
    </section>
</div>
<script>
    CKEDITOR.replace('content');
</script>