

@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container" >
    <div class="row text-right" dir="rtl">
        <div class="col-md-8" >
            @{ 

                if (ViewBag.result != null)
                {
                <div class="alert alert-success" role="alert">
                       @ViewBag.result
                </div>
               }
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                <div class="form-horizontal">
                    <h4 class="mt-3">التقدم الى الوظيفة</h4>
                    <hr />
                   
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("الرسالة", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextArea("message", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessage("message", "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="تاكيد" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("العودة الى القائمة", "Index")
            </div>
        </div>
    </div>
</div>